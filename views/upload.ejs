<h1>Lav nyt opslag</h1>

<% if (typeof error !== "undefined" && error) { %>
  <div class="error"><%= error %></div>
<% } %>

<% if (typeof msg !== "undefined" && msg) { %>
  <div class="succes"><%= msg %></div>
<% } %>

<form action="/upload" 
      method="POST" 
      enctype="multipart/form-data" 
      class="new-post">

  <!-- Tekstfelt -->
  <textarea 
    id="postText"
    name="text" 
    placeholder="Skriv et opslag..."
    required
  ></textarea>

  <!-- Dropzone -->
  <div id="dropZone" class="dropzone">
    Træk og slip billeder her – eller klik for at vælge
  </div>

  <!-- Selve file-input (skjult, aktiveres af JS) -->
  <input 
    id="postImage"
    type="file" 
    name="image" 
    accept="image/*"
    style="display:none;"
  >

  <!-- Preview grid -->
  <div id="preview" class="preview"></div>

  <!-- Upload-knap -->
  <button id="postButton" type="submit">Opslå</button>
</form>

<!-- JS til drag & drop og preview -->
<script src="/javascripts/uploads.js"></script>